      function showNotification(from, align){
$.notify({
    icon: "add_alert",
    message: "ADDED TEACHER SUCCESSFULLY"
},{
    type: 'success',
    delay: 20000,
    allow_dismiss: true,
	timer: 10000,
    placement: {
        from: from,
        align: align
    },
